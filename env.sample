# Wallet System Environment Variables
# Copy this file to .env and set all values - all are REQUIRED

# Environment (optional, defaults to 'development')
NODE_ENV=development

# =============================================================================
# API GATEWAY SERVICE
# =============================================================================
API_GATEWAY_PORT=3000

# Command Service connection
COMMAND_SERVICE_HOST=localhost
COMMAND_SERVICE_PORT=3001

# Query Service connection
QUERY_SERVICE_HOST=localhost
QUERY_SERVICE_PORT=3002

# =============================================================================
# COMMAND SERVICE
# =============================================================================
# Write Database (Event Store)
DB_WRITE_HOST=localhost
DB_WRITE_PORT=5432
DB_WRITE_USERNAME=wallet_user
DB_WRITE_PASSWORD=wallet_password
DB_WRITE_DATABASE=wallet_write_db

# =============================================================================
# QUERY SERVICE
# =============================================================================
# Read Database (Projections)
DB_READ_HOST=localhost
DB_READ_PORT=5433
DB_READ_USERNAME=wallet_user
DB_READ_PASSWORD=wallet_password
DB_READ_DATABASE=wallet_read_db

# =============================================================================
# FRAUD SERVICE
# =============================================================================
FRAUD_SERVICE_HOST=localhost
FRAUD_SERVICE_PORT=3003

# Fraud Database
DB_FRAUD_HOST=localhost
DB_FRAUD_PORT=5434
DB_FRAUD_USERNAME=wallet_user
DB_FRAUD_PASSWORD=wallet_password
DB_FRAUD_DATABASE=wallet_fraud_db

# =============================================================================
# RABBITMQ
# =============================================================================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=wallet_user
RABBITMQ_PASSWORD=wallet_password
RABBITMQ_MANAGEMENT_PORT=15672

# =============================================================================
# REDIS (Idempotency)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
