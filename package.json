{
  "name": "wallet-system",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:dev:command": "npm run start:dev command-service",
    "start:dev:query": "npm run start:dev query-service",
    "start:dev:fraud": "npm run start:dev fraud-service",
    "start:dev:gateway": "npm run start:dev api-gateway",
    "start:dev:all": "concurrently -n \"command-service,query-service,fraud-service,api-gateway\" -c \"blue,green,yellow,magenta\" \"npm:start:dev:command\" \"npm:start:dev:query\" \"npm:start:dev:fraud\" \"npm:start:dev:gateway\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:unit": "jest --testPathPatterns=\\.spec\\.ts$ --testPathIgnorePatterns=tests/",
    "test:unit:saga": "jest --testPathPatterns=transfer-saga\\.service\\.spec\\.ts$",
    "test:integration": "jest --testPathPatterns=tests/.*\\.spec\\.ts$ --runInBand",
    "test:integration:wallet-api": "jest --testPathPatterns=tests/wallet-api\\.spec\\.ts$ --runInBand",
    "test:integration:concurrency": "jest --testPathPatterns=tests/concurrency\\.spec\\.ts$ --runInBand",
    "test:integration:idempotency": "jest --testPathPatterns=tests/idempotency\\.spec\\.ts$ --runInBand",
    "test:integration:fraud": "jest --testPathPatterns=tests/fraud\\.spec\\.ts$ --runInBand",
    "test:integration:saga": "jest --testPathPatterns=tests/transfer-saga\\.spec\\.ts$ --runInBand"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/cqrs": "^11.0.3",
    "@nestjs/microservices": "^11.1.9",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.3",
    "@nestjs/typeorm": "^11.0.0",
    "amqp-connection-manager": "^5.0.0",
    "amqplib": "^0.10.9",
    "ioredis": "^5.8.2",
    "joi": "^18.0.2",
    "json-rules-engine": "^7.3.1",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "apps/**/*.(t|j)s",
      "libs/**/*.(t|j)s",
      "!**/*.spec.ts",
      "!**/*.module.ts",
      "!**/main.ts",
      "!**/index.ts"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/",
      "<rootDir>/tests/"
    ],
    "moduleNameMapper": {
      "^@app/shared(|/.*)$": "<rootDir>/libs/shared/src/$1"
    },
    "testTimeout": 30000
  }
}